<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="@drawable/background_color">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="546dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="3dp"
        android:text="Hello, If Your Case Is Emergency"
        android:textColor="#FBFBEC"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ContinueButton"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="302dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/color2"
        android:padding="3dp"
        android:text="Continue Use Our App"
        android:textColor="#45b5a7"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="385dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:padding="3dp"
        android:text="Not Emergancy?"
        android:textColor="#FBFBEC"

        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="450dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/color2"
        android:gravity="center"
        android:padding="10dp"
        android:text="Call 911"
        android:textColor="#45b5a7"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>



